
{
  "manifest_version": 2,

  "name": "PlayTube",
  "description": "Use YouTube for song streaming",
  "version": "0.9",

  "icons": {
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./js/contentScript.js"]
    }
  ],

  "background": {
    "scripts": ["./js/lib/parse.min.js", "./js/backgroundScript.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
